.list-item {
  background-color: #fff;
  border-radius: 5rpx;
  padding: 30rpx 30rpx;
  margin-top: 50rpx;
}

.spacer {
  width: 100%;
  border-top: 1rpx solid #f8f8f8;
  margin: 10rpx auto;
}

.list-item .item_title {
  font-size: 40rpx;
  font-weight: 400;
}

.list-item .avatar-group {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  height: 70rpx;
}

.avatar-group .avatar {
  width: 70rpx;
}

.avatar-group .nickname {
  color: #787878;
  font-size: 28rpx;
  line-height: 70rpx;
  margin-left: 10rpx;
}

.avatar-group .avatar image {
  width: 60rpx;
  height: 60rpx;
  border-radius: 100%;
  border: 3rpx solid #f8f8f8;
}

.flex-right {
  -webkit-flex: 1;
  flex: 1;
  text-align: right;
  overflow: hidden;
}

.icon-group {
  font-size: 24rpx;
  line-height: 24rpx;
  color: #787878;
  vertical-align: middle;
  display: inline-block;
  margin-left: 10rpx;
  margin-right: 10rpx;
}
